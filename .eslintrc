{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ]
    },
    "overrides": [
        {
            "files": [
                "*.ts"
            ],
            "env": {
                "jest": true,
                "node": true
            }
        }
    ]
}